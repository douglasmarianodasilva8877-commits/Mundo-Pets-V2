{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    "plugins": [{ "name": "next" }],
    "strictNullChecks": true,

    // âœ… Caminhos absolutos
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@/components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@prisma/*": ["prisma/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next-auth.d.ts",
    ".next/types/**/*.ts",
    "types/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
