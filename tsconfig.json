{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,

    // ðŸ‘‡ Suporte a imports absolutos (ex: "@/components/...")
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "types/**/*.d.ts",        // ðŸ‘ˆ Garante que o TypeScript reconheÃ§a o next-auth.d.ts
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
