generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String?
  role      Role      @default(USER)
  avatarUrl String?
  city      String?
  bio       String?
  createdAt DateTime  @default(now())
  accounts  Account[]
  comments  Comment[]
  pet       Pet?      @relation("UserPet")
  posts     Post[]
  sessions  Session[]
}

model Pet {
  id          String   @id @default(cuid())
  name        String
  species     String?
  slug        String   @unique
  breed       String?
  age         Int?
  bio         String?
  description String?
  avatarUrl   String?
  ownerId     String?  @unique
  ownerEmail  String?  @unique
  createdAt   DateTime @default(now())
  owner       User?    @relation("UserPet", fields: [ownerId], references: [id])
  posts       Post[]
}

model Post {
  id        String    @id @default(cuid())
  authorId  String
  petId     String?
  content   String
  imageUrl  String?
  likes     Int       @default(0)
  createdAt DateTime  @default(now())
  comments  Comment[]
  author    User      @relation(fields: [authorId], references: [id])
  pet       Pet?      @relation(fields: [petId], references: [id])
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  authorId  String
  content   String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}

model Sponsor {
  id        String     @id @default(cuid())
  name      String
  imageUrl  String?
  website   String?
  createdAt DateTime   @default(now())
  campaigns Campaign[]
}

model Campaign {
  id        String   @id @default(cuid())
  sponsorId String
  title     String
  content   String
  imageUrl  String?
  budget    Float    @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  sponsor   Sponsor  @relation(fields: [sponsorId], references: [id])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  user              User     @relation(fields: [userId], references: [id])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}
