generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FriendshipStatus { PENDING ACCEPTED BLOCKED }
enum Visibility { PUBLIC FRIENDS PRIVATE }
enum ReactionType { LIKE LOVE HAHA WOW SAD ANGRY }
enum GroupPrivacy { PUBLIC PRIVATE }
enum GroupRole { MEMBER ADMIN }
enum NotificationType { LIKE COMMENT FRIEND_REQUEST FRIEND_ACCEPT FOLLOW }

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  username     String   @unique
  name         String
  avatarUrl    String?
  city         String?
  isPublic     Boolean  @default(true)
  createdAt    DateTime @default(now())

  pets         Pet[]
  posts        Post[]
  comments     Comment[]
  reactions    Reaction[]
  notifications Notification[]

  friendshipsA Friendship[] @relation("A")
  friendshipsB Friendship[] @relation("B")
  follows      Follow[]     @relation("Follower")
  followers    Follow[]     @relation("Target")
}

model Pet {
  id        String   @id @default(cuid())
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  name      String
  bio       String?
  avatarUrl String?
  coverUrl  String?
  isPage    Boolean  @default(true)
  createdAt DateTime @default(now())

  posts     Post[]
  followers FollowPet[]
}

model Friendship {
  requesterId String
  addresseeId String
  requester   User   @relation("A", fields: [requesterId], references: [id])
  addressee   User   @relation("B", fields: [addresseeId], references: [id])
  status      FriendshipStatus @default(PENDING)
  createdAt   DateTime @default(now())
  @@id([requesterId, addresseeId])
}

model Follow {
  followerId String
  targetId   String
  follower   User   @relation("Follower", fields: [followerId], references: [id])
  target     User   @relation("Target", fields: [targetId], references: [id])
  createdAt  DateTime @default(now())
  @@id([followerId, targetId])
}

model FollowPet {
  followerId String
  petId      String
  follower   User @relation(fields: [followerId], references: [id])
  pet        Pet  @relation(fields: [petId], references: [id])
  createdAt  DateTime @default(now())
  @@id([followerId, petId])
}

model Media {
  id        String   @id @default(cuid())
  url       String
  width     Int?
  height    Int?
  type      String
  ownerId   String
  createdAt DateTime @default(now())
}

model Post {
  id         String   @id @default(cuid())
  authorId   String
  author     User     @relation(fields: [authorId], references: [id])
  petId      String?
  pet        Pet?     @relation(fields: [petId], references: [id])
  content    String
  mediaId    String?
  media      Media?   @relation(fields: [mediaId], references: [id])
  visibility Visibility @default(PUBLIC)
  location   String?
  groupId    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  comments   Comment[]
  reactions  Reaction[]
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  content   String
  parentId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reaction {
  userId   String
  postId   String
  type     ReactionType @default(LIKE)
  createdAt DateTime @default(now())
  user     User @relation(fields: [userId], references: [id])
  post     Post @relation(fields: [postId], references: [id])
  @@id([userId, postId])
}

model Group {
  id        String   @id @default(cuid())
  name      String   @unique
  privacy   GroupPrivacy @default(PUBLIC)
  coverUrl  String?
  createdAt DateTime @default(now())
  memberships GroupMember[]
}

model GroupMember {
  groupId String
  userId  String
  role    GroupRole @default(MEMBER)
  group   Group @relation(fields: [groupId], references: [id])
  user    User  @relation(fields: [userId], references: [id])
  @@id([groupId, userId])
}

model Notification {
  id       String   @id @default(cuid())
  userId   String
  actorId  String
  type     NotificationType
  refId    String?
  read     Boolean  @default(false)
  createdAt DateTime @default(now())
}
